{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "OpenWhisk Deployment Format",
  "type": "object",
  "properties": {
    "includes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string"
          }
        }
      }
    },
    "packages": {
      "type": "array",
      "description": "List of packages",
      "items": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "inputs": {
              "type": "array"
            },
            "description": "The package parameters list`"
          }
        }
      }
    }
  },
  "additionalProperties": false
}